static void task1(void *args __attribute__((unused))) {
    char ch;

    wait_terminal();
    std_printf("Started!\n\n");

    rtc_setup();        // bật RTC & ngắt
    taskYIELD();

    for (;;) {
        mutex_lock();
        std_printf("\nPress 'A' to set 10 second alarm,\n"
                   "else any key to read time.\n\n");
        mutex_unlock();

        ch = std_getc();
        if (ch == 'a' || ch == 'A') {
            mutex_lock();
            std_printf("\nAlarm configured for 10 seconds from now.\n");
            mutex_unlock();
            set_alarm(10u);  // đặt alarm sau 10s
        }
    }
}
